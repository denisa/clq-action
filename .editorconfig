root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.sh]
# https://github.com/patrickvane/shfmt
# noinspection EditorConfigKeyCorrectness
switch_case_indent = true
# noinspection EditorConfigKeyCorrectness
space_redirects = true

[Makefile]
indent_style = tab
